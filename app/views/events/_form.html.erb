<%= form_for(@event, :html => {:class => 'form form-events edit_event'}) do |f| %>
  <div class="form-row">
    <%= f.label :startYear, class: 'form-label' %>
    <%= f.text_field :startYear, class: 'form-field' %>
  </div>
  <div class="form-row">
    <%= f.label :endYear, class: 'form-label' %>
    <%= f.text_field :endYear, class: 'form-field' %>
  </div>
  <div class="form-row">
    <%= f.label :startMonth, class: 'form-label' %>
    <%= f.text_field :startMonth, class: 'form-field' %>
  </div>
  <div class="form-row">
    <%= f.label :endMonth, class: 'form-label' %>
    <%= f.text_field :endMonth, class: 'form-field' %>
  </div>
  <div class="form-row">
    <%= f.label :startDay, class: 'form-label' %>
    <%= f.text_field :startDay, class: 'form-field' %>
  </div>
  <div class="form-row">
    <%= f.label :endDay, class: 'form-label' %>
    <%= f.text_field :endDay, class: 'form-field' %>
  </div>
  <div class="form-row is-fullWidth">
    <%= f.label :headline, class: 'form-label' %>
    <%= f.text_field :headline, class: 'form-field' %>
  </div>
  <div class="form-row is-fullWidth">
    <%= f.label :text, class: 'form-label' %>
    <%= f.text_area :text, cols: 60, rows: 7, class: 'form-field' %>
  </div>
  <div class="form-row">
    <%= f.label 'Event group', class: 'form-label' %>
    <%= f.collection_select :eventgroup_id, Eventgroup.order(:group), :id, :group, {include_blank: false}, {class: 'form-field'} %>
  </div>
  <div class="form-row">
    <%= f.label 'Event type', class: 'form-label' %>
    <%= f.collection_select :eventtype_id, Eventtype.order(:eventtype), :id, :eventtype, {include_blank: false}, {class: 'form-field'} %>
  </div>
  <div class="form-row">
    <%= f.label :media, class: 'form-label' %>
    <%= f.text_field :media, class: 'form-field' %>
  </div>
  <div class="form-row">
    <%= f.label :mediaCredit, class: 'form-label' %>
    <%= f.text_field :mediaCredit, class: 'form-field' %>
  </div>
  <div class="form-row">
    <%= f.label :mediaCaption, class: 'form-label' %>
    <%= f.text_field :mediaCaption, class: 'form-field' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
